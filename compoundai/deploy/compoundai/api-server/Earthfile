docker:
    ARG TAG=latest
    ARG IMAGE=compound-api-server
    FROM gcr.io/distroless/static:nonroot
    WORKDIR /
    COPY +build/server .
    COPY +build/.env .
    USER 65532:65532
    ENTRYPOINT ["/server"]
    SAVE IMAGE $IMAGE:$TAG